<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@color/orangeLightest"
        android:layout_marginTop="-270dp"
        android:rotation="60"
        android:layout_width="400dp"
        android:layout_height="400dp">

        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:materialIcon="github_face"
            app:materialIconColor="@color/orangeWhiteLightest"
            app:materialIconSize="140dp"
            android:rotation="-90"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="7dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:scaleType="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/androidrecruitmenttest"
            style="@style/CustomTextViewStyle"
            android:textColor="@color/orangeLight"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/flexappeal"
            style="@style/CustomTextViewStyle"
            android:textColor="@color/orangeLight"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-270dp"
        android:rotation="60"
        android:background="@color/orangeLightest"
        android:layout_width="400dp"
        android:layout_height="400dp">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/facebookIconView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:materialIcon="facebook_box"
            app:materialIconColor="@color/orangeWhiteLightest"
            android:rotation="-90"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="10dp"
            app:materialIconSize="140dp"
            android:scaleType="center"/>
    </RelativeLayout>

</RelativeLayout>