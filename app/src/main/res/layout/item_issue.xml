<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTextView"
            style="@style/CustomTextViewStyle"
            android:layout_toStartOf="@id/commentsLinearLayout"
            android:text="How to import module without module name in objective c?"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/updatedAtAndAuthorTextView"
                style="@style/CustomTextViewStyle"
                android:layout_toStartOf="@id/commentsLinearLayout"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Updated on 11 Oct 2018 by hendych"
                android:textSize="12sp"
                android:textColor="@color/grayFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/commentsLinearLayout"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:materialIcon="comment"
                    app:materialIconColor="@color/grayIcon"
                    app:materialIconSize="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="center"/>
                <TextView
                    android:id="@+id/commentsTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="0 comments"
                    android:textSize="12sp"
                    android:textColor="@color/grayFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>


