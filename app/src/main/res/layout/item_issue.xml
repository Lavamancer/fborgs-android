<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTextView"
                style="@style/CustomTextViewStyle"
                android:layout_toStartOf="@id/commentsLinearLayout"
                android:text="Title"
                android:ellipsize="end"
                android:layout_margin="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/orangeStrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/commentsLinearLayout"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:materialIcon="comment"
                    app:materialIconColor="@color/orangeWhite"
                    app:materialIconSize="15dp"
                    android:scaleType="center"/>
                <TextView
                    android:id="@+id/commentsTextView"
                    style="@style/CustomTextViewStyle"
                    android:text="1234"
                    android:textSize="12sp"
                    android:textColor="@color/orangeWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/authorTextView"
                style="@style/CustomTextViewStyle"
                android:text="Author"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:textColor="@color/orangeWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/updatedAtTextView"
                android:layout_alignParentEnd="true"
                style="@style/CustomTextViewStyle"
                android:text="Updated on 11 Oct 2018"
                android:textSize="12sp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/orangeWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/bodyTextView"
            style="@style/CustomTextViewStyle"
            android:text="Description Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>