<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:clickable="true"
              android:focusable="true"
              android:background="@color/orangeWhiteLighter"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

        <RelativeLayout
            android:background="@color/orangeLightest"
            android:layout_marginTop="-300dp"
            android:rotation="60"
            android:layout_width="400dp"
            android:layout_height="400dp">

            <net.steamcrafted.materialiconlib.MaterialIconView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:materialIcon="github_face"
                app:materialIconColor="@color/orangeWhiteLightest"
                app:materialIconSize="140dp"
                android:rotation="-90"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="7dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:scaleType="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-300dp"
            android:rotation="60"
            android:background="@color/orangeLightest"
            android:layout_width="400dp"
            android:layout_height="400dp">

            <net.steamcrafted.materialiconlib.MaterialIconView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:materialIcon="facebook_box"
                app:materialIconColor="@color/orangeWhiteLightest"
                android:rotation="-90"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="10dp"
                app:materialIconSize="140dp"
                android:scaleType="center"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    style="@style/CustomTextViewStyle"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="@string/flexappeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                    style="@style/CustomTextViewStyle"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="@string/androidrecruitmenttest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
            android:layout_marginTop="1dp"
            android:background="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/CustomTextViewStyle"
                    android:text="@string/sidemenu_copyright"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                    style="@style/CustomTextViewStyle"
                    android:text="@string/sidemenu_rights"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/facebookIconView"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:materialIcon="facebook"
                    app:materialIconColor="#fff"
                    app:materialIconSize="36dp"
                    android:scaleType="center"/>
            <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/twitterIconView"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:materialIcon="twitter"
                    app:materialIconColor="#fff"
                    app:materialIconSize="36dp"
                    android:scaleType="center"/>
            <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/shareIconView"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:materialIcon="share_variant"
                    app:materialIconColor="#fff"
                    app:materialIconSize="36dp"
                    android:scaleType="center"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>